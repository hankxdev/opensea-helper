{
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://opensea.io/*"
      ],
      "js": [
        "inject.bundle.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "identity", 
    "alarms",
     "tabs", 
     "storage",
     "*://*.opensea.io/*"],
  "manifest_version": 3,
  "name": "OpenSea NFT extension",
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "inject.bundle.js",
        "contentScript.bundle.js",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
