{
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-256.png"
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*.opensea.io/*",
    "https://apexgo-api.herokuapp.com/*",
    "https://us-central1-nifty-owl.cloudfunctions.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://opensea.io/*"],
      "js": ["inject.bundle.js", "rarity.bundle.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "128": "icon-256.png"
  },
  "permissions": ["identity", "alarms", "tabs", "storage"],
  "manifest_version": 3,
  "name": "Nifty Owl",
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "inject.bundle.js",
        "contentScript.bundle.js",
        "icon-256.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://metamask.io/*"],
    "ids": ["*"]
  }
}
